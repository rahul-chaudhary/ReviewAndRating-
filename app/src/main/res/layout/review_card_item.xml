<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        android:hapticFeedbackEnabled="true"
        android:elevation="0dp"
        android:layout_marginVertical="10dp"
        >


        <LinearLayout
            android:id="@+id/parentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/nameAndRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"

                >
<androidx.cardview.widget.CardView
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:elevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="30dp">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center"

        android:layout_weight="1"
        android:src="@drawable/eazydiner" />

</androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/reviewerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Sourish Bhattacharya" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="0.1"
                    android:layout_gravity="center_vertical"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/green">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/reviewerRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="4.5"
                            android:textColor="@color/white"
                            android:background="@color/green"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="2dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/green"
                            android:src="@drawable/baseline_star_24"

                            />

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:id="@+id/timeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:fontFamily="@font/poppins_regular"
                android:text="1 week ago"
                android:textColor="@color/gray"
                android:textSize="13sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tagChipRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/tag_chip_item"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                >


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    android:src="@drawable/food1"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/dummy_food_image" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/roundImageView"
                    android:src="@drawable/food2"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="@string/dummy_food_image" />

            </LinearLayout>

            <TextView
                android:id="@+id/reviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/recommended_dishes"/>

            <TextView
                android:id="@+id/reviewBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginVertical="5dp"
                android:text="Honey chilli potato, Lasagna"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>